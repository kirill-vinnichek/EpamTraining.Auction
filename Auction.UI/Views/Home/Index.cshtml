@model Auction.UI.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Title Page -->
    <div class="row">
        <div class="span12">
            <div class="title-page">
                <h2 class="title">Welcome to Auction</h2>
            </div>
        </div>
    </div>
    <!-- End Title Page -->
    <!-- Portfolio Projects -->
    <div class="row">
        <div class="span3">
            <!-- Filter -->
            <nav id="options" class="work-nav">
                <ul id="filters" class="option-set">
                    <li class="type-work">Sections</li>
                     @foreach(var c in Model.Categories)
                     {
                         //TODO:Сделать ссылки
                         <li><a href="@c.CategoryId">@c.Title</a></li>
                     }
                </ul>
            </nav>
            <!-- End Filter -->
        </div>

        <div class="span9">
            <div class="row">
                <section id="projects">
                    <ul id="thumbs">
                        @foreach (var l in Model.Lots)
                        { Html.RenderPartial("_LotPartial", l); }
                        <!-- Item Project and Filter Name -->

                    </ul>
                </section>

            </div>
            @Html.PageLinks(Model.Page,Model.PageCount,u => @Url.Action("Index","Home",new { page = u }))
        </div>
    </div>
    <!-- End Portfolio Projects -->
</div>


